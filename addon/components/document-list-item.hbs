<tr
  class={{if @isSelected "document-list-item-selected" "document-list-item"}}
  data-test-document-list-item
  role="button"
  {{on "click" (fn @onClickDocument @document)}}
>
  <td>
    <FaIcon
      @icon="file-alt"
      @prefix="far"
      @size="1x"
      data-test-file-icon
      {{set-style color=@document.category.color}}
    />
  </td>
  <td>
    <span>{{@document.title}}</span>
    <div uk-dropdown="pos: right-bottom; offset: 15; delay-show: 400; delay-hide: 100;" style="margin: 0; padding: 0; min-width: auto;">
      <img data-src="{{@document.thumbnail}}" uk-img/>
    </div>
  </td>
  <td>
    {{format-date @document.modifiedAt month="2-digit" day="2-digit" year="numeric" hour="2-digit" minute="2-digit"}}
  </td>
  <td>
    {{@document.createdByUser}}
  </td>
</tr>