<div class="uk-background-muted uk-padding-small uk-border-bottom">
  <form
    class="uk-background-default uk-search uk-search-default uk-width-1"
    {{on "submit" this.onSubmit}}
  >
    <span uk-search-icon />
    <input
      type="search"
      class="uk-search-input uk-background-default"
      placeholder="Search..."
      value={{@search}}
      aria-label="Search input"
      data-test-search-input
      {{on "input" (perform this.updateSearch)}}
    />
  </form>
</div>