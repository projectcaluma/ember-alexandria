<li class="category-nav--category" ...attributes>
  <a
    class="uk-link-reset {{if @selected "active"}}"
    role="button"
    href=""
    data-test-link
    {{on "click" this.loadCategory}}
  >
    <div class="uk-flex uk-flex-middle">
      <div>
        <FaIcon
          @icon="folder"
          @size="2x"
          class="uk-margin-right"
          data-test-icon
          {{set-style color=@category.color}}
        />
      </div>
      <div data-test-name>
        {{@category.name}}
      </div>
    </div>
  </a>
</li>